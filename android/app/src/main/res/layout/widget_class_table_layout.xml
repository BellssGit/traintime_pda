<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/widget_classtable_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="课程表"
            android:textColor="#167CB6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/widget_classtable_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widget_classtable_title"
            android:text="Loading..."
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/widget_classtable_switcher"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/clickable_background"
            android:contentDescription="switcher"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_previous" />
    </RelativeLayout>

    <ListView
        android:id="@+id/widget_classtable_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>